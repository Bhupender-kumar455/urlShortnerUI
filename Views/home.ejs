<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body {
        display: grid;
        place-items: center;
        font-family: Arial, Helvetica, sans-serif;
        background-color: #0c0e14;
        color: #60b66d;
      }
      form {
        display: flex;
        margin-top: 10px;
      }
      label {
        color: #d78a25;
        font-weight: bold;
      }
      form input {
        background-color: #111115;
        border: none;
        width: 100%;
        font-size: 15px;
        padding: 10px 0 10px 10px;
        color: #abb2bf;
        border-bottom: 1px solid #3ab6b9;
      }
      form input:focus {
        outline: none;
      }
      form button {
        padding: 10px;
        font-size: 18px;
        border: none;
        background-color: #60b66d;
      }
      .shorturl {
        margin-top: 20px;
      }
      .table {
        margin-top: 20px;
        display: grid;
        place-items: center;
      }
    </style>
  </head>
  <body>
    <div>
      <h1>Your Average URL shortner Site</h1>
      <label for="url">Enter your long URL</label>

      <form action="/url/" method="post">
        <input type="text" name="url" placeholder="Your URL" />
        <button type="submit">Create</button>
      </form>

      <% if (locals.latest) { %>
      <a href="http://localhost:5001/url/<%= latest %>"
        >http://localhost:5001/url/<%= latest %></a
      >
      <% } %>
      <div class="table">
        <% if (locals.url) { %>
        <table>
          <thead>
            <th>No.</th>
            <th>ShortURL</th>
            <th>RedirectURL</th>
            <th>Clicked</th>
          </thead>
          <tbody>
            <% url.forEach((one,index) => { %>
            <tr>
              <td><%= index+1 %></td>
              <td>
                <a href="http://localhost:5001/url/<%= one.shortId %>"
                  >http://localhost:5001/url/<%= one.shortId %>
                </a>
              </td>
              <td><%= one.redirectURL %></td>
              <td><%= one.visitHistory.length %></td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
